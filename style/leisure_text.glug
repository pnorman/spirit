layer(:leisure_names, source: :spirit, source_layer: :'leisure-names') {
  filter way_area >= (1500 * 6_126_430_366.1 * 0.25**zoom)

  symbol_placement :point

  text_field '{name}'
  text_font literal(:noto_sans_regular)
  text_size 12
  text_color '#20342e' # lch(20,10,170)
  text_max_width interpolate([:linear],
    name.length,
    20, 7,
    40, 10,
    60, 15)

  text_halo_blur 1
  text_halo_width 1.5
  text_halo_color '#cfe8df' # lch(90,10,170)
}
